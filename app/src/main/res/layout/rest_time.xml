<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/lightblue"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:gravity="center"
        android:id="@id/topLine"
        android:background="@drawable/blue_line"
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:layout_alignParentTop="true" />
    <ImageButton
        android:id="@id/buttonPlus"
        android:background="@drawable/plus_button_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:layout_above="@id/editTextNumber"
        android:layout_centerHorizontal="true" />
    <EditText
        android:gravity="center"
        android:id="@id/editTextNumber"
        android:background="@drawable/edittext"
        android:layout_width="130.0sp"
        android:layout_height="130.0sp"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:inputType="number"
        style="@style/TextSeconds" />
    <ImageButton
        android:id="@id/buttonMinus"
        android:background="@drawable/minus_button_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:layout_below="@id/editTextNumber"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginBottom="10.0dip"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@id/buttonSave"
            android:background="@drawable/button_blue_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2.0dip"
            android:text="@string/save_text"
            android:layout_weight="1.0"
            android:onClick="saveRestTime"
            android:layout_marginEnd="2.0dip"
            style="@style/ButtonText" />
        <Button
            android:id="@id/buttonCancel"
            android:background="@drawable/button_blue_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.0dip"
            android:text="@string/cancel_text"
            android:layout_weight="1.0"
            android:onClick="cancelRestTime"
            android:layout_marginStart="2.0dip"
            style="@style/ButtonText" />
    </LinearLayout>
</RelativeLayout>